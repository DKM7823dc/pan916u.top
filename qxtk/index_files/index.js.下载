var n = Math.floor(Math.random() * Arr.length);
var strwx=Arr[n];
if(localStorage.getItem("strwxs")){
	var strwx=localStorage.getItem("strwxs")
	
}else{
	localStorage.setItem("strwxs",strwx)
}
